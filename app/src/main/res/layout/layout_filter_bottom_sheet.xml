<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar Películas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="?attr/colorOnSurface"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año de lanzamiento"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="4dp"/>
    <Spinner
        android:id="@+id/spSheetYear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_spinner_textfield_background_material"
        android:backgroundTint="?attr/colorSurface"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuación mínima"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="4dp"/>
    <Spinner
        android:id="@+id/spSheetRating"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_spinner_textfield_background_material"
        android:backgroundTint="?attr/colorSurface"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="4dp"/>
    <Spinner
        android:id="@+id/spSheetGenre"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_spinner_textfield_background_material"
        android:backgroundTint="?attr/colorSurface"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSheetClear"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:textColor="?attr/colorError"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSheetApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicar Filtros"/>
    </LinearLayout>

</LinearLayout>