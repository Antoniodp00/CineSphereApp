<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cine_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas de tu Colección"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.card.MaterialCardView
            style="@style/CineCardView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="24dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvResumenTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            tools:text="Total de películas: 15"/>

        <Button
            android:id="@+id/btnExportarGrafica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Gráfica en Galería"
            android:layout_marginTop="24dp"
            android:backgroundTint="?attr/colorPrimary"
            app:icon="@android:drawable/ic_menu_save" />

    </LinearLayout>
</ScrollView>