<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Principal de la AplicaciÃ³n (Claro) -->
    <style name="Theme.CineSphere" parent="Theme.Material3.Light.NoActionBar">
        <!-- Mapeo de Colores Primarios -->
        <item name="colorPrimary">@color/cine_primary</item>
        <item name="colorPrimaryVariant">@color/cine_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Mapeo de Colores de Superficie y Fondo -->
        <item name="android:colorBackground">@color/cine_background</item>
        <item name="colorSurface">@color/cine_surface</item>
        <item name="colorOnBackground">@color/cine_text_primary</item>
        <item name="colorOnSurface">@color/cine_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/cine_text_secondary</item>

        <!-- Color de la Barra de Estado -->
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <!-- Mapeo de Colores de Error -->
        <item name="colorError">@color/cine_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Estilo de las CardViews por defecto -->
        <item name="cardViewStyle">@style/CineCardView</item>
    </style>

    <!-- Estilo para las CardViews -->
    <style name="CineCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/cine_surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/cine_borders</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>